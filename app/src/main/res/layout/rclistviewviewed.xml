<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:background="#212121"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_category_viewed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:text="Thế giới"
        android:textColor="#CAB2B2"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="6dp">

        <TextView
            android:id="@+id/tv_title_viewed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Tiêu đề bài báo"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:paddingEnd="8dp" />

        <ImageView
            android:id="@+id/iv_news_viewed"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/img" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_time_viewed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:text="Đã xem 5 ngày trước"
        android:textColor="#CAB2B2"
        android:textSize="15sp" />
</LinearLayout>
