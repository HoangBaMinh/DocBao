<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HighlightActivity">

    <!-- Thanh điều hướng cuộn ngang đặt ở trên cùng -->
    <HorizontalScrollView
        android:id="@+id/top_navigation_scroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/top_navigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#EEEEEE"
            android:padding="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_category"
                android:background="#EEEEEE"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_category" />

            <Button
                android:id="@+id/btn_latest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tin mới" />

            <Button
                android:id="@+id/btn_highlights"
                android:backgroundTint="#FF5722"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điểm tin" />

            <Button
                android:id="@+id/btn_yourown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Của riêng bạn" />

            <Button
                android:id="@+id/btn_business"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kinh doanh" />

            <!-- Thêm nếu cần -->
            <Button
                android:id="@+id/btn_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khác" />

        </LinearLayout>
    </HorizontalScrollView>

    <!-- ListView hiển thị danh sách tin -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_news"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:contentDescription="Danh sách bài viết"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_navigation_scroll"
        app:layout_constraintVertical_bias="0.0" />

    <!-- Thanh điều hướng dưới cùng -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#EEEEEE"
        android:padding="8dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Trang chủ" />

        <Button
            android:id="@+id/btn_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Chuyên Mục" />

        <Button
            android:id="@+id/btn_utilities"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tiện Ích" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>